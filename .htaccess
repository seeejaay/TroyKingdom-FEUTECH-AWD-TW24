RewriteEngine On # To internally forward /dir/file to /dir/file.html RewriteCond
%{REQUEST_FILENAME} !-d RewriteCond %{REQUEST_FILENAME}.html -f RewriteRule
^(.*)$ $1.html [L] # To externally redirect /dir/file.html to /dir/file
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.html [NC] RewriteRule ^ %1 [R,L]
